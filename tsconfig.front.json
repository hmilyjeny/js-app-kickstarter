{
  "compilerOptions": {
    "target":                 "es5",
    "module":                 "commonjs",
    "jsx":                    "react",
    "outDir":                 "./dist/",
    "lib":                    [
      "es5",
      "es2015.promise",
      "dom"
    ],
    "sourceMap":              true,
    "noImplicitAny":          true,
    "removeComments":         true,
    "pretty":                 true,
    "experimentalDecorators": true
  },
  "include":         [
    "src/frontend/**/*"
  ]
}

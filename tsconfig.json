{
  "compilerOptions": {
    "target":                 "es6",
    "module":                 "commonjs",
    "outDir":                 "./dist/",
    "jsx":                    "react",
    "moduleResolution":       "node",
    "lib":                    [
      "es6",
      "es2015.promise",
      "dom"
    ],
    "sourceMap":              true,
    "noImplicitAny":          true,
    "removeComments":         true,
    "pretty":                 true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata":  true,
    "skipLibCheck":           true
  },
  "include":         [
    "src/server/**/*"
  ]
}
